<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff9f9f9">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="true">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/years_in_service"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/years_in_service_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Years in Service"
                    android:textAllCaps="false"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/firm_size"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/firm_size_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Firm Size"
                    android:textAllCaps="false"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/service_offered"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/service_offered_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Service Offered"
                    android:inputType="text"
                    android:textAllCaps="false"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/assets_served"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/assets_served_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Assets Served"
                    android:textAllCaps="false"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/city_served"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/city_served_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="City Served"
                    android:inputType="text"
                    android:textAllCaps="false"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/award_name"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/award_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Award Name"
                    android:textAllCaps="false"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/text__box_background">
                <!--app:hintTextAppearance="#ff959595">-->

                <EditText
                    android:id="@+id/project_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff211e1e"
                    android:textSize="@dimen/text14"
                    android:hint="Project Name"
                    android:textAllCaps="false"
                    android:inputType="text"/>

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp">

                <Button
                    android:id="@+id/save_changes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save all Changes"
                    android:textColor="@color/White"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"
                    android:background="@drawable/sqr_factor_btn_color"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>