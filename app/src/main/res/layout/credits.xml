<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/sqr"
            app:layout_collapseMode="parallax"
            android:fitsSystemWindows="true"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff9f9f9">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff9f9f9">

                    <ImageView
                        android:id="@+id/profile_cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/home_banner"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:id="@+id/profile_about_morebtn"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_below="@+id/profile_cover_image"
                        android:layout_marginEnd="16sp"
                        android:layout_marginTop="16sp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_more" />

                    <com.comix.rounded.RoundedCornerImageView
                        android:id="@+id/profile_profile_image"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="18dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="174dp"
                        android:background="@color/white"
                        android:padding="3dp"
                        android:src="@drawable/sqr2" />

                    <ImageButton
                        android:id="@+id/profile_editprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="236dp"
                        android:layout_marginStart="84dp"
                        android:background="@drawable/online_chat"
                        android:src="@drawable/edit_icon"/>

                    <TextView
                        android:id="@+id/profile_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginStart="123dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_below="@+id/profile_cover_image"
                        android:text="SqrFactor"
                        android:textAllCaps="false"
                        android:textColor="#ff202020"
                        android:textSize="@dimen/text16" />

                    <TextView
                        android:id="@+id/profile_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_profile_name"
                        android:layout_marginStart="123dp"
                        android:text="India"
                        android:textAllCaps="false"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#ff616161"
                        android:textSize="@dimen/text12"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/profile_short_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="274dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/montserrat"
                        android:text="SqrFactor India Pvt."
                        android:textColor="#ff565656"/>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/profile_count"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/profile_blueprintcnt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="23dp"
                            android:layout_marginStart="23dp"
                            android:text="0"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#ff373737"/>

                        <TextView
                            android:id="@+id/profile_portfoliocnt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="23dp"
                            android:layout_marginStart="40dp"
                            android:text="0"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#ff373737"/>

                        <TextView
                            android:id="@+id/profile_followerscnt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="23dp"
                            android:layout_marginStart="40dp"
                            android:text="0"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#ff373737"/>

                        <TextView
                            android:id="@+id/profile_followingcnt"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="23dp"
                            android:layout_marginEnd="23dp"
                            android:layout_marginStart="40dp"
                            android:text="0"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="#ff373737"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:layout_marginBottom="15sp"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/profile_blueprintClick"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12sp"
                            android:layout_height="match_parent"
                            android:text="Blueprint"
                            android:textSize="@dimen/text12"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="#ff9b9b9b"/>

                        <TextView
                            android:id="@+id/profile_portfolioClick"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="26dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat"
                            android:text="Portfolio"
                            android:textColor="#ff9b9b9b"/>

                        <TextView
                            android:id="@+id/profile_followersClick"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="26dp"
                            android:layout_height="match_parent"
                            android:text="Followers"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="#ff9b9b9b"/>

                        <TextView
                            android:id="@+id/profile_followingClick"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="26dp"
                            android:layout_marginEnd="12sp"
                            android:layout_height="match_parent"
                            android:text="Following"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="#ff9b9b9b"/>
                    </LinearLayout>
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10dp"-->
                <!--android:fontFamily="@font/montserrat"-->
                <!--android:textSize="15sp"-->
                <!--android:text="You haven't posted any articles yet. Go ahead and create some amazing articles!" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To know more, read "
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="faqs"
                        android:textSize="@dimen/text14"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/sqr"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:background="#fff5f5f5"
                    android:gravity="center_vertical"
                    android:id="@+id/headingLayout"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:text="Article"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#ff040404"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:text="Total Views"
                        android:textSize="15sp"
                        android:textColor="#ff040404"
                        android:fontFamily="@font/montserrat"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="20sp"
                        android:layout_height="match_parent"
                        android:text="1st Week views"
                        android:textColor="#ff040404"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:text="Credits"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/sqr"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="5dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:gravity="end">

                    <Button
                        android:id="@+id/prevPage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_back"
                        android:textAllCaps="false"
                        android:textColor="@color/White" />

                    <Button
                        android:id="@+id/nextPage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="5sp"
                        android:layout_marginLeft="5sp"
                        android:background="@drawable/ic_next"
                        android:textAllCaps="false"
                        android:textColor="@color/White" />
                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_credit"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v7.widget.RecyclerView>


</android.support.design.widget.CoordinatorLayout>