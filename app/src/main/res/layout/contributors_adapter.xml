<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_margin="2sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/White"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.comix.rounded.RoundedCornerImageView
            android:id="@+id/contributors_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="16sp"
            app:cornerRadius="4dp"
            android:src="@drawable/sqr2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:paddingRight="30sp"
            android:paddingLeft="30sp">

            <TextView
                android:id="@+id/contributors_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amit"
                android:fontFamily="@font/montserrat"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contributors_postnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post: 04"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:textColor="#ff686868"/>

                <TextView
                    android:id="@+id/contributors_viewnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | Views: 02"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:layout_gravity="center"
                    android:textColor="#ff686868"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginTop="7sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/contributors_followbtn"
                    android:layout_width="83dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="12sp"
                    android:background="@drawable/follow_btn"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/text12" />

                <ImageView
                    android:id="@+id/contributors_menu"
                    android:layout_width="35sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_more_verticle" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>