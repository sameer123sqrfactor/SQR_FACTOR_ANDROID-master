<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17sp"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="30dp"
                android:text="Welcome to SqrFactor"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:textColor="#ff0d0c0c"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19sp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ffff4747"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="to Continue!"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#ff686868"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="15dp">
                <Button
                    android:id="@+id/email_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Email"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text14"
                    android:textColor="#fff74242"/>

                <Button
                    android:id="@+id/mobile_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="Phone"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text14"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/login_with_email_view"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:layout_marginStart="15dp"
                    android:focusable="false"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/text__box_background"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14sp"
                        android:layout_marginStart="16sp"
                        android:background="@android:color/transparent"
                        android:text="Enter Email"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#ff2c2c2c"
                        android:textSize="12sp"/>
                    <EditText
                        android:id="@+id/loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16sp"
                        android:background="@android:color/transparent"
                        android:textColor="#ff848484"
                        android:text=""
                        android:fontFamily="@font/montserrat"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/text__box_background"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14sp"
                        android:layout_marginStart="16sp"
                        android:background="@android:color/transparent"
                        android:text="Enter Password"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="#ff2c2c2c"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="15dp"
                        android:weightSum="3">

                        <EditText
                            android:id="@+id/loginPassword"
                            android:layout_width="0dp"
                            android:layout_weight="2.6"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16sp"
                            android:background="@android:color/transparent"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat"
                            android:inputType="textPassword"
                            />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_weight="0.4"
                            android:layout_height="20dp"
                            android:layout_toEndOf="@+id/loginPassword"
                            android:background="#ffffffff"
                            android:id="@+id/showPasswordIcon"
                            android:src="@drawable/ic_red_eye" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginEnd="15sp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:id="@+id/rememberMeLoginCheckBox"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Remember Me"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#ff393535"
                        android:layout_weight="4"/>

                    <TextView
                        android:id="@+id/forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot my Password"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="#ff393535"/>

                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60sp"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:backgroundTint="@color/sqr"
                    android:text="SIGN IN"
                    android:fontFamily="@font/montserrat"
                    android:textSize="15sp"
                    android:textColor="#ffffff"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:id="@+id/login"/>


            </LinearLayout>


