<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item android:width="330dp" android:height="65dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ffe4e4e4" />
            <corners android:radius="6dp" />
            <solid android:color="#ffffffff" />
            <item android:name="android:shadowColor">#12000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">3</item>
        </shape>
    </item>
</selector>