<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:width="142dp" android:height="38dp">
    <shape android:shape="rectangle">
        <corners android:topLeftRadius="14dp" android:topRightRadius="14dp" android:bottomLeftRadius="14dp" android:bottomRightRadius="0dp" />
        <solid android:color="#ffffff" />
        <item android:name="android:shadowColor">#14f74242</item>
        <!-- TextView shadow offsets do not respect scale. -->
        <item android:name="android:shadowDx">0</item>
        <item android:name="android:shadowDy">4</item>
        <stroke android:width="1dp" android:color="@color/colorAccent" />

    </shape>
</item>
</selector>