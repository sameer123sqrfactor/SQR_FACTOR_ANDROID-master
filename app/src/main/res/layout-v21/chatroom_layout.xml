<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingStart="10sp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.comix.rounded.RoundedCornerImageView
                android:id="@+id/chat_frnd_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                app:cornerRadius="6dp"
               />

            <ImageView
                android:id="@+id/onlineicon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/online_chat" />

        </FrameLayout>
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/chat_frnd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Amit Maheshwari"
                    android:lines="1"
                    android:maxLength="20"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#ff000000"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/chat_last_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Okay cool!"
                    android:fontFamily="@font/montserrat"
                    android:maxLines="1"
                    android:maxLength="25"
                    android:textColor="#ff686868"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:layout_gravity="center"
                android:gravity="end|center">
                <TextView
                    android:id="@+id/unreadCount"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:visibility="visible"
                    android:background="@drawable/online_chat"
                    android:text="0"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginEnd="5sp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/chat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Day ago"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="end|right|center"
                    />

                <!--<FrameLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="15sp">-->

                <!--<ImageView-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_height="24dp"-->
                <!--android:id="@+id/offlineicon"-->
                <!--android:src="@drawable/ic_offline"/>-->
                <!--</FrameLayout>-->
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>