<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SubmissionDetailActivity">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/toolbar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_weight="1.9"
                    android:id="@+id/fullView_Submission_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Title"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#474646"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_weight="0.1"
                    android:id="@+id/submission_menu"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:layout_gravity="end|center"
                    android:src="@drawable/ic_more"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16dp"
                    android:textColor="#474646"
                    android:text="Team Code :" />

                <TextView
                    android:id="@+id/team_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16dp"
                    android:textColor="#474646"
                    android:text="TUIWHZFG" />

            </LinearLayout>

            <TextView
                android:id="@+id/submission_time"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textSize="12dp"
                android:text="0 hours ago" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Competition :"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:id="@+id/competition_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Unravel"
                    android:textColor="@color/sqr"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pb"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"/>


            <WebView
                android:id="@+id/webViewPdf"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                android:layout_marginTop="10dp">

            </WebView>




            <!--<com.github.barteksc.pdfviewer.PDFView-->
                <!--android:id="@+id/pdfView"-->
                <!--android:layout_below="@+id/webViewPdf"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginBottom="70dp"/>-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/submission_webView"
                android:layout_height="wrap_content">
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:fontFamily="@font/montserrat"
                android:id="@+id/submission_fullPostDescription"
                android:layout_height="wrap_content"
                android:textSize="16dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/submission_fullpost_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/news_like"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:stateListAnimator="@animator/scale" />

                    <TextView
                        android:id="@+id/submission_fullpost_likeList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/montserrat"
                        android:text="0 Like"
                        android:textAllCaps="false"
                        android:textColor="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/submission_fullpost_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_commentbtn"
                        android:drawableLeft="@drawable/ic_commentbtn"
                        android:fontFamily="@font/montserrat"
                        android:text=" 0 Comment"
                        android:textAllCaps="false"
                        android:textColor="@android:color/tertiary_text_dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/submission_fullpost_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:drawableStart="@drawable/ic_share_square"
                        android:drawableLeft="@drawable/ic_share_square"
                        android:drawablePadding="10sp"
                        android:fontFamily="@font/montserrat"
                        android:gravity="start|center_vertical"
                        android:text="Share"
                        android:textAllCaps="false"
                        android:textColor="@android:color/tertiary_text_dark" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sub_detail_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                tools:text="0 comments"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/sub_detail_comments_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="20sp"
                android:paddingRight="20sp">

                <ImageView
                    android:id="@+id/sub_detail_profile"
                    android:layout_width="40dp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:src="@drawable/sqr2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginStart="7sp"
                    android:layout_marginLeft="7sp">

                    <EditText
                        android:id="@+id/sub_detail_comment"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="50sp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:hint="Write a comment..."
                        android:padding="10sp"
                        android:textSize="@dimen/text12"
                        android:fontFamily="@font/montserrat"
                        android:background="@drawable/edit_text_background"
                        android:layout_centerVertical="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_marginLeft="5sp" />

                    <TextView
                        android:id="@+id/sub_detail_post_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:padding="2dp"
                        android:text="Post"
                        android:textSize="@dimen/text14"
                        android:textAllCaps="false"
                        android:textColor="@color/sqr"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="9dp" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>




</LinearLayout>