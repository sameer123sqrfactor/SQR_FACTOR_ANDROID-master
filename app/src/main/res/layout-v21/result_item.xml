        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/result_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:button="@null"
                    android:checked="false"
                    android:stateListAnimator="@animator/scale"
                    android:background="@drawable/news_like"
                    android:focusable="true"/>
                <TextView
                    android:id="@+id/result_likeList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:background="@android:color/transparent"
                    android:text="0 Like"
                    android:textAllCaps="false"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">

                <Button
                    android:id="@+id/result_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_commentbtn"
                    android:drawableLeft="@drawable/ic_commentbtn"
                    android:fontFamily="@font/roboto"
                    android:text="0 Comment"
                    android:textAllCaps="false"
                    android:textColor="@android:color/tertiary_text_dark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <Button
                    android:id="@+id/result_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawablePadding="5sp"
                    android:drawableStart="@drawable/ic_share_square"
                    android:gravity="start|center_vertical"
                    android:text="Share"
                    android:textAllCaps="false"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:fontFamily="@font/roboto"
                    android:drawableLeft="@drawable/ic_share_square" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>